yabai -m config layout                     bsp
yabai -m config window_border              on
yabai -m config active_window_border_color 0xff24ccaa

yabai -m rule --add app="^.*$"                                          manage=off
yabai -m rule --add app="^Google Chrome$"        title!="^$"            manage=on
yabai -m rule --add app="^Sidekick$"             title!="^$"            manage=on
yabai -m rule --add app="^iTerm2$"               title!="^Preferences$" manage=on
yabai -m rule --add app="^Code$"                 title!="^$"            manage=on
